<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>net4.0;net4.5;net4.6;net4.8;netstandard2.0;netstandard2.1;net6.0;net7.0;net8.0</TargetFrameworks>
		<Authors>Tom</Authors>
		<LangVersion>10.0</LangVersion>
		<ImplicitUsings>disable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<AssemblyVersion>$(Version)</AssemblyVersion>
		<FileVersion>$(Version)</FileVersion>
		<Version>3.0.0</Version>
		<Copyright>Copyright © Tom 2021-2025</Copyright>
		<Description>便捷的HttpClient库
支持GET/POST/PUT/Delete 上传文件/文件参数
===========================
使用HttpWebRequest实现</Description>
		<PackageId>Tom.HttpLib</PackageId>
		<PackageIcon>Logo.png</PackageIcon>
		<RepositoryUrl>https://github.com/Haku-Men/HttpLib</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>Http;HttpLib;HttpHelper;HttpClient;HttpDown;M3U8;DownLoad</PackageTags>
		<PackageReleaseNotes>新增流式请求GPT这种</PackageReleaseNotes>
		<PackageProjectUrl>https://github.com/Haku-Men/HttpLib</PackageProjectUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
	</PropertyGroup>
	<ItemGroup>
		<None Include="..\Logo.png" Pack="true" PackagePath="" />
		<None Include="..\README.md" Pack="true" PackagePath="" />
	</ItemGroup>
</Project>
